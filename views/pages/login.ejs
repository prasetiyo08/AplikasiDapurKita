<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2 class="auth-title">Masuk ke DapurKita</h2>
            <p class="auth-subtitle">Selamat datang kembali! Ayo lanjutkan pengalaman kuliner Anda</p>
        </div>

        <% if (locals.error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
        <% } %>

        <form action="/auth/masuk" method="POST" class="auth-form">
            <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" required>
            </div>
            
            <div class="form-group">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Masuk</button>
        </form>

        <p class="auth-footer">
            Belum punya akun? <a href="/daftar">Daftar sekarang</a>
        </p>

        <!-- Link forgot password -->
        <p class="auth-footer">
            <a href="/auth/lupa-password" class="forgot-password-link">Lupa password?</a>
        </p>
    </div>
</div>